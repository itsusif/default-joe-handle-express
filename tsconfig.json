{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowArbitraryExtensions": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "@models/*": [
                "src/database/models/*"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@database/*": [
                "src/database/*"
            ],
            "@type/*": [
                "src/types/*"
            ],
            "@src/*": [
                "src/*"
            ],
            "@repositories/*": [
                "src/repositories/*"
            ],
            "@config": [
                "src/config.json"
            ],
            "@router/*": [
                "src/router/*"
            ],
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "global.d.ts"
    ]
}